<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="@color/colorPrimary"
        android:text="我的信息"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <LinearLayout
        android:background="@mipmap/blue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:src="@mipmap/lu"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <TextView
            android:textColor="@color/bottom"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="Alworm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


<!--    个人信息条-->
    <View
        android:background="#66CCFF"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/id_info"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="个人信息"
            android:textSize="25dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:background="@mipmap/value_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <View
        android:background="#66CCFF"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/id_mission"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="任务查询"
            android:textSize="25dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:background="@mipmap/value_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:background="#66CCFF"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <TextView
            android:id="@+id/id_update"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="修改密码"
            android:textSize="25dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:background="@mipmap/value_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

<!--关于我们条-->
    <View
        android:background="#66CCFF"
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/id_about"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="关于我们"
            android:textSize="25dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="15dp"
            android:background="@mipmap/value_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:background="#66CCFF"
        android:layout_width="match_parent"
        android:layout_height="2px"/>


    <Button
        android:id="@+id/id_exit"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="@color/bottom"
        android:text="退出"
        android:layout_width="200dp"
        android:layout_height="60dp"/>

</LinearLayout>